<UserControl x:Class="TryOut.Views.MainPages.MessageBoxesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:MainPages="clr-namespace:TryOut.ViewModels.MainPages"
             xmlns:Controls="clr-namespace:TryOut.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance MainPages:MessageBoxesViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Controls:BigButton Label="OK" Command="{Binding ShowOKCommand}" Margin="0,0,10,0" />
        <Controls:BigButton Label="YesNo" Command="{Binding ShowYesNoCommand}" />
    </StackPanel>

</UserControl>